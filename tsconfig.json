{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "types": ["cypress", "node"],
    "noImplicitAny": true,
    "baseUrl": ".", 
    "paths": {
      "@pages/*": ["cypress/pages/*"],
      "@support/*": ["cypress/support/*"],
      "@tasks/*": ["cypress/tasks/*"]
    }
  },
  "include": ["cypress/**/*.ts"]
}
